.sign-up-form
  .form
    %h1 Log in
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, label: false, placeholder: "Email Address", required: false, autofocus: true
        = f.input :password, label: false, placeholder: "Password", required: false
      .form-actions
        = f.button :submit, "Log in", class: "button form-sub"
        = render "devise/shared/links"
