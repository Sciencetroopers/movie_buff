%h1 Advanced Search
= simple_form_for(@search, html: {class: 'form-horizontal'}) do |f|
 = f.input :keywords, input_html: {class: "form-control"}
 %b Genre
 = f.input_field :genre, label: "Genre", :collection => @genres, :include_blank => true, input_html: {class: "dropdown-toggle"}
 = f.input :min_year, input_html: {class: "form-control"}
 = f.input :max_year, input_html: {class: "form-control"}
 = f.input :director, input_html: {class: "form-control"}
 = f.input :actor, input_html: {class: "form-control"}
 %br
 = f.button :submit

= link_to "Back", movies_path
