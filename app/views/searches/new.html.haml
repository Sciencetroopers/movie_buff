= render 'form'
%hr
.movies
  - @movies.each do |movie|
    .movie
      .poster
        = link_to (image_tag movie.image.url(:medium)), movie, class: "poster-img"
        .buttons
          %span
            -# = pluralize(movie.reviews.count, "Review")
            = movie.reviews.count
            %i.fa.fa-comment-o
          %span
            = movie.get_likes.size
            %i.heart.fa.fa-heart
.paginate
  %p= will_paginate @movies, renderer: BootstrapPagination::Rails, previous_label: "Previous", next_label: "Next", inner_window: 1, outer_window: 0
