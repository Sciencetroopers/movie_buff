.sign-up-form
  .form
    %h1 Advanced Search
    = simple_form_for(@search, html: {class: 'form-horizontal'}) do |f|
      .form-inputs
        = f.input :keywords, input_html: {class: "form-control"}
        %b Genre
        = f.input_field :genre, label: "Genre", :collection => @genres, :include_blank => true, input_html: {class: "dropdown-toggle"}
        = f.input :min_year, input_html: {class: "form-control"}
        = f.input :max_year, input_html: {class: "form-control"}
        = f.input :director, input_html: {class: "form-control"}
        = f.input :actor, input_html: {class: "form-control"}
      .form-actions
        = f.button :submit, class: "button form-sub"
    = link_to "Back", movies_path, class: "button form form-btn"

.movies
  - @movies.each do |movie|
    .movie
      .poster
        = link_to (image_tag movie.image.url(:medium)), movie, class: "poster-img"
        .buttons
          %span
            -# = pluralize(movie.reviews.count, "Review")
            = movie.reviews.count
            %i.fa.fa-comment-o
          %span
            = movie.get_likes.size
            %i.heart.fa.fa-heart
%p= will_paginate @movies, renderer: BootstrapPagination::Rails, previous_label: "Previous", next_label: "Next", inner_window: 1, outer_window: 0
