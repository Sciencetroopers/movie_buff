= simple_form_for(@movie, html: {class: 'form-horizontal'}) do |f|
  = f.input :image
  = f.input :title, input_html: {class: "form-control"}
  = f.input :synopsis, input_html: {class: "form-control"}
  = f.input :director, input_html: {class: "form-control"}
  = f.input :actors, input_html: {class: "form-control"}
  = f.input :rating, input_html: {class: "form-control"}
  = f.input :year, input_html: {class: "form-control"}
  = f.input :month, input_html: {class: "form-control"}
  = f.input :genre, input_html: {class: "form-control"}
  = f.input :length, input_html: {class: "form-control"}
  = f.input :language, input_html: {class: "form-control"}
  = f.input :link_rt, input_html: {class: "form-control"}
  = f.input :link_w, input_html: {class: "form-control"}
  = f.input :link_fb, input_html: {class: "form-control"}
  %br
  = f.button :submit
