%h1 Index Page
%hr
= form_tag movies_path, :method => 'get' do
  %p
    = text_field_tag :search, params[:search]
    = submit_tag "Search", :name => nil
-# %p= link_to "Advanced Search", new_search_path
%hr
- @movies.each do |movie|
  %p= movie.title
%p= link_to "New Movie", new_movie_path
%p= will_paginate @collection, renderer: BootstrapPagination::Rails, previous_label: "Previous", next_label: "Next", inner_window: 1, outer_window: 0
